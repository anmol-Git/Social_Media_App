<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <EditText
        android:id="@+id/postContent"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:hint="@string/what_do_you_want_to_talk_about"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edit_text_round_shape"
        android:autofillHints="Feeling happy :)" />

    <Button
        android:layout_width="0dp"
        android:id="@+id/postbutton"
        android:layout_height="wrap_content"
        android:text="@string/post"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/postContent"
        app:layout_constraintStart_toStartOf="@id/postContent"
        app:layout_constraintEnd_toEndOf="@id/postContent"
        android:background="@drawable/edit_text_round_shape"
        />
</androidx.constraintlayout.widget.ConstraintLayout>